server {
	listen 80;
        server_name shiva.neosavvy.com;

        location / {
            autoindex  on;
            root /opt/www.neosavvy.com/;
        }

}
server {
	listen 80;
        server_name vm1.neosavvy.com;

        location / {
	    proxy_pass http://vm1.neosavvy.local;
        }

}
